@model IEnumerable<Produit>
@{
    ViewData["Title"] = "Index";
}



<div class="container pt-2" >

    <div class="p-4">
        <div class="row">
            <div class="col-6">
                <h4 class="text-primary">La liste des Produits</h4>
            </div>
            <div class="col-6 text-right">
                <a asp-controller="Produit" asp-action="Create" class="btn-success">New Produit</a>
            </div>
        </div>
    </div>

    @if (Model.Count()>0) 
    {
      <table class="table table-bordered table-striped w-100" >
          <thead>
              <tr class="text-center">
                  <th>ProduitID</th>
                  <th>Designation</th>
                  <th>Prix</th>
                  <th>Quantite</th>
                  <th>Actions</th>
              </tr>
          </thead>
         <tbody>
                 @foreach (Produit obj in Model)
                 {
                  <tr class="text-center">
                     <td>@obj.ProduitID</td>
                     <td>@obj.Designation</td>
                     <td>@obj.Prix</td>
                     <td>@obj.Quantite</td>
                     <td>
                         <div class="w-75 btn-group" role="group">
                             <a asp-controller="Produit" asp-action="Edit" asp-route-ProduitID="@obj.ProduitID" class="btn-primary mx-2">Edit</a>
                             <a asp-controller="Produit" asp-action="Delete" asp-route-ProduitID="@obj.ProduitID" class="btn-danger mx-2">Delete</a>

                         </div>
                     </td>


                  </tr>
                 }
         </tbody>

      </table>
    }
    else
    {
      <h4 class="text-danger">le Produit est introuvable !</h4>
    }
</div>

